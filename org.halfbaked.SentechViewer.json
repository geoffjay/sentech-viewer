{
    "app-id": "org.halfbaked.SentechViewer",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.24",
    "sdk": "org.gnome.Sdk",
    "command": "sentech-viewer",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],
    "build-options" : {
        "cflags": "-O2 -g -I/usr/lib64/glib-2.0/include",
        "cxxflags": "-O2 -g",
        "env": {
            "V": "1"
        }
    },
    "cleanup": ["/include", "/lib/pkgconfig",
                "/share/pkgconfig", "/share/aclocal",
                "/man", "/share/man", "/share/gtk-doc",
                "/share/vala",
                "*.la", "*.a"],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/aclocal",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "sentech-viewer",
            "sources": [
                    {
                        "type": "git",
                        "url": "https://github.com/geoffjay/sentech-viewer.git"
                    }
            ],
            "config-opts": ["PKG_CONFIG_PATH=/usr/local/lib/pkgconfig"]
        }
    ]
}
